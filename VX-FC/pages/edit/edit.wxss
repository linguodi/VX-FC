/* pages/edit/edit.wxss */
@import '../../lib/iconfont/iconfont.wxss';
.edit-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    height: 30pt;
    font-size: 11pt;
}
.header-delive {
    color: #09BB07;
}
.edit-main,
.edit-footer {
    padding: 60rpx 60rpx;
}
.edit-text {
    /* min-height: 100rpx; */
    height: 180rpx;
    overflow-y: scroll;
    font-size: 13pt;
    line-height: 20pt;
    color: #353535
}
.edit-img {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-content: space-between;
}
.edit-img  image {
    width: 200rpx;
    height: 200rpx;
    margin: 0 10rpx 10rpx 0;
}
.icon-plus {
    width: 200rpx;
    height: 200rpx;
    background-color: rgba(87,107,149,0.1);
    font-size: 40pt;
    color: #888;
    line-height: 200rpx;
    text-align: center;
}
.footer-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    font-size: 13pt;
    border-top: 1rpx solid rgba(87,107,149,0.1);
}
.footer-row>text:nth-child(2){
    flex-grow: 1;
    text-indent: 0.5rem;
}
.icon-zuobiaonormal,
.icon-touxiang,
.icon-at,
.icon-arrow-right {
    font-size: 16pt;
}
.iconfont {
    color: #888;
}
.icon-qqkongjian,
.icon-qq {
    font-size: 18pt;
}
.mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(136,136,136,0.3);
}
.choose {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
}
.chooseBar {
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
    font-size: 16pt;
    border-bottom: 1rpx solid rgba(87,107,149,0.1);
    background-color: white;
}
.mask-header {
    width: 100%;
    height: calc(100% - 360rpx);
}